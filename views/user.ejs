<%-include('header')%>
<%-include('navbar',{page:'/user'})%>
      <div class="container">
        <div class="row">
            <div class="col">
              </div>
              <div class="col">
                  <h1 class="page-header">User</h1>
              </div>
              <div class="col">
              </div>
        </div>

        <div class="row card-container">
            <div class="card" style="width: 50rem;">
                <div class="card-body">
                    <div class ="card-title-row">
                        <h3 class="card-title">Username: <%= user.username %></h3>
                        <div class="button-cluster">
                            <button type="button" class="btn btn-primary" onclick="window.location.href='/edit/user/<%= user._id %>';">
                                <span class="material-icons">
                                    edit
                                </span>
                            </button>
                            <button type="button" class="btn btn-danger" onclick="window.location.href='/delete/user/<%= user._id %>';">
                                <span class="material-icons">
                                    delete
                                </span>
                            </button>
                        </div>
                    </div>
                    <div class="mt-3">
                        <h4>E-mail:<%= user.email %></h4>
                    </div>
                    <div class="mb-4 mt-3">
                        <h4>Bio:</h4>
                        <textarea class="form-control disabled" name="Description" id="descriptionTextArea" rows="10"><%= user.bio %></textarea>
                    </div>
                </div>
            </div>
        </div>
<%-include('footer')%>