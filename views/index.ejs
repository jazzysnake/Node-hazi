<%-include('header')%>
<%-include('navbar',{page:'/'})%>
      <div class="container">
        <div class="row">
            <div class="col">
              </div>
              <div class="col">
                  <h1 class="page-header">All Posts</h1>
              </div>
              <div class="col">
              </div>
        </div>
        <% posts.forEach(function(post){ %>
        <div class="row card-container">
            <div class="card" style="width: 30rem;">
                <div class="card-body">
                    <div class ="card-title-row">
                        <h5 class="card-title"><a href="/post/<%= post._id%>">
                        <%= post.title %> 
                        </a></h5>
                        <div class="button-cluster">
                            <button type="button" class="btn btn-primary" onclick="window.location.href='/edit/post/<%=post._id%>';">
                                <span class="material-icons">
                                    edit
                                </span>
                            </button>
                            <button type="button" class="btn btn-danger" onclick="window.location.href='/delete/post/<%=post._id%>';">
                                <span class="material-icons">
                                    delete
                                </span>
                            </button>
                        </div>
                    </div>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= (post.rating + ' | ' + post.drinktype + ' | ' + post.roast)%>
                    </h6>
                    <p class="card-text"><%= post.desc%></p>
                    <p class="card-author">
                        <%= post._author.username%>
                    </p>
                </div>
            </div>
      </div>
      <% }); %> 
<%-include('footer')%>